<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="getList" resultType="boardDto" 
								parameterType="boardDto">
	SELECT *
	FROM (SELECT result1.*,ROWNUM rnum 
		  	  FROM (SELECT num,writer,title,content,regdate
						FROM board_guest
						<where>
							<if test="writer !=null">
								writer LIKE '%' || #{writer} || '%'
							</if>
						</where>
						<where>
							<if test="title !=null">
								writer LIKE '%' || #{writer} || '%'
							</if>
						</where>
						<where>
							<if test="writer !=null">
								writer LIKE '%' || #{writer} || '%'
							</if>
						</where>
			    		ORDER BY num DESC
			   		 	) result1
	    	   )
	WHERE rnum BETWEEN #{startRowNum} AND #{endRowNum}
	</select>
	<select id="getData" resultType="boardDto" parameterType="int">
		SELECT result1.*
		FROM
			(SELECT num,writer,title,content,
			TO_CHAR(regdate, 'YYYY.MM.DD AM HH:MI') regdate,
			LAG(num, 1, 0) OVER (ORDER BY num DESC) prevNum,
			LEAD(num, 1, 0) OVER (ORDER BY num DESC) nextNum
			FROM board_guest
			ORDER BY num DESC) result1
		WHERE num=#{num}
	</select>
	<insert id="insert" parameterType="boardDto">
		INSERT INTO board_guest
		(num,writer,title,content,regdate)
		VALUES(board_guest_seq.NEXTVAL,#{writer},#{title},#{content},SYSDATE)
	</insert>
	<update id="update" parameterType="boardDto">
		UPDATE board_guest
		SET writer=#{writer},title=#{title},content=#{content}
		WHERE num=#{num}
	</update>
	<delete id="delete" parameterType="int">
		DELETE FROM board_guest
		WHERE num=#{num}
	</delete>
	<select id="getCount" resultType="int">
		SELECT NVL(MAX(ROWNUM), 0)
		FROM board_guest
	</select>
</mapper>








